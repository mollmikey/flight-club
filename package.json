{
  "name": "flight-club-jsx",
  "version": "1.0.0",
  "description": "A fun challenge to find unclaimed luggage",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "run-s build && start:server",
    "start:server": "node dist/index.js",
    "build": "esbuild server/index.js --bundle --packages=external --outfile=dist/index.js --jsx=automatic --platform=node --format=esm --watch",
    "dev": "run-p build:watch dev:watch",
    "build:watch": "esbuild server/index.js --bundle --packages=external --outfile=dist/index.js --jsx=automatic --platform=node --format=esm --watch",
    "dev:watch": "nodemon dist/index.js --ignore 'server/data/'",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "keywords": [
    "knex",
    "sqlite3",
    "joins"
  ],
  "author": "Dev Academy",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.2",
    "knex": "^2.5.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6",
    "vitest": "^0.34.4"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@faker-js/faker": "^8.0.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.9"
  },
  "eslintConfig": {
    "extends": "@devacademy"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}